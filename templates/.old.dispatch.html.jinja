{% extends "home.html.jinja" %}
{% block title %}Dispatch - Squad View{% endblock %}
{% block body %}
{% if data == {} %}
    There are no squads active.
{% endif %}
<ul class="flex-container nowrap">
    {% for squad_id in data %}
    <li class="flex-item">
        <TABLE class="blueTable">
            <thead>
                <tr>
                    <th>{{ data[squad_id][0].name }}</th>
                </tr>
            </thead>
            <tbody>
                {% for officer in data[squad_id][1] %}
                <tr>
                    <td>{{ officer[1] }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </TABLE>
    </li>
    {% endfor %}
</ul>
{% endblock %}